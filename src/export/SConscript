import glob


Import('env')

env_p = env.Clone()

env_p.Append(CPPPATH = ['#/src/include', '#/src/export'])

env_p.Append(LIBPATH = ['#/src/lib'])
env_p.Append(LIBS = ['kunquat'])

player = env_p.Program('kunquat-export', glob.glob('*.c'))
env_p.InstallCreatePath(env_p['prefix'] + '/bin', player)
env_p.InstallCreatePath(env_p['prefix'] + '/share/man/man1', 'kunquat-export.1')


