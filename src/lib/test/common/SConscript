import glob
import os.path


Import('env')

env_tc = env.Clone()

env_tc.Append(CPPPATH = ['.', '#/src/include'])

env_tc.Append(LIBPATH = ['#/src/lib'])
env_tc.Append(LIBS = ['kunquat', 'check'])


env_tc.sources = glob.glob('*.c')

env_tc.StaticLibrary('test_common', env_tc.sources)


