import glob


Import('env')

Export('env')

if env['enable_tests']:
    SConscript('test/SConscript')

env_lib = env.Clone()

if not env_lib.GetOption('clean') and 'check' in env['LIBS']:
    env_lib['LIBS'].remove('check')

#print 'lib: ' + env_lib.Dump('LIBS')

env_lib.Append(CPPPATH = ['#/src/lib',
                          '#/src/lib/events',
                          '#/src/lib/generators',
                          '#/src/include'])


env_lib.sources = glob.glob('*.c')

Export('env_lib')

SConscript('events/SConscript')
SConscript('generators/SConscript')

libkunquat = env_lib.SharedLibrary('kunquat', env_lib.sources)
env_lib.Install(env_lib['prefix'] + '/lib', libkunquat)


