env.Append(LIBS = ['core'])

files = [
	'Listener.c',
	'Listener_driver.c',
	'Listener_song.c',
	'Listener_ins.c',
	'Listener_demo.c',
	'Listener_pattern.c',
	'Listener_note_table.c',
