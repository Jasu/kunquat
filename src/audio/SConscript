Import('env')

env_a = env.Clone()

env_a.Append(CPPPATH = ['#/src/lib', '#/src/include', '#/src/audio'])

files = [
    'Audio.c',
    'Audio_creator.c',
    'Audio_null.c',
    'Mix_state.c',
]

if env_a['with_pulse']:
    files += ['Audio_pulse.c']
if env_a['with_jack']:
    files += ['Audio_jack.c']
if env_a['with_openal']:
    files += ['Audio_openal.c']

env_a.StaticLibrary('audio', files)


