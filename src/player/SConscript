import glob


Import('env')

env_p = env.Clone()

env_p.Append(CPPPATH = ['#/src/include', '#/src/audio', '#/src/player'])

env_p.Append(LIBPATH = ['#/src/lib', '#/src/audio'])
env_p.Append(LIBS = ['kunquat', 'audio'])

player = env_p.Program('kunquat-player', glob.glob('*.c'))
env_p.Install(env_p['prefix'] + '/bin', player)
env_p.Install(env_p['prefix'] + '/man/man1', 'kunquat-player.1')


